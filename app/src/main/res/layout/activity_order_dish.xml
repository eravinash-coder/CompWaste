<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomerPanel.OrderWaste">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="397dp"
                    android:layout_height="67dp"
                    android:layout_marginTop="20sp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/food_name"
                        android:layout_width="376dp"
                        android:layout_height="62dp"
                        android:layout_marginLeft="15dp"
                        android:maxWidth="300dp"
                        android:text="WASTE CATEGORY"
                        android:textColor="@color/Blacklogo"
                        android:textSize="27dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="108dp"
                    android:layout_height="22dp"
                    android:layout_gravity="right">

                </LinearLayout>

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/number_btn"
                    android:layout_width="99dp"
                    android:layout_height="22dp"
                    android:layout_gravity="right"
                    app:backGroundColor="#FA3E03"
                    app:backgroundDrawable="@drawable/elegant_btnshape" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/chef_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:padding="10dp"
                        android:text="Admin Name"
                        android:textAllCaps="false"
                        android:textColor="@color/Black"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/chef_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:padding="10dp"
                        android:text="Admin Location"
                        android:textAllCaps="false"
                        android:textColor="@color/Black"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/food_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:padding="10dp"
                        android:text="Minimum Quantity"
                        android:textAllCaps="false"
                        android:textColor="@color/Black"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/food_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:padding="10dp"
                        android:text="Reward Per KG"
                        android:textAllCaps="false"
                        android:textColor="@color/Black"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/food_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:padding="10dp"
                        android:text="Description"
                        android:textAllCaps="false"
                        android:textColor="@color/Black"
                        android:textSize="17dp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
